<% flash.each do |name, msg| %>
  <div class='alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible mb-0' role="alert" style="padding: 0.5rem 1.25rem;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-left: 0.5rem;">
      <span aria-hidden="true">&times;</span>
    </button>
    <% if msg.is_a?(String) %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
  </div>
<% end %>
