<h1 class="text-center mt-4"></h1> 

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 d-flex justify-content-center align-items-center"> <!-- Center text in the column -->
            <p class="text-white">
                Welcome to Parking Management System! Experience the convenience of our innovative parking solution. Say goodbye to the hassle of finding parking spots.
            </p>

        </div>

        <div class="col-md-4">
            <div class="card border-primary shadow">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-center">Login</h5>
                    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
                        <div class="form-group">
                            <%= f.label :email, class: "mb-0" %>
                            <%= f.email_field :email, class: "form-control form-control-sm" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password, class: "mb-0" %>
                            <%= f.password_field :password, class: "form-control form-control-sm" %>
                        </div>
                        <div class="form-group text-center">
                            <%= f.submit "Log In", class: "btn btn-primary btn-sm btn-block" %>
                        </div>
                    <% end %>
                    <div class="text-center">
                        <p class="mb-0">Don't have an account?</p>
                        <%= link_to "Sign up", signup_path, class: "btn btn-link mt-0" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>